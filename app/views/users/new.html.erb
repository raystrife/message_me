<h1 class= "ui center aligned header">Sign up to MessageMe</h1>
<div class="ui segment">
	<div class="ui form">
		<%= form_with(model: @user, local: true) do |f| %>
			<div class="field">
			  <%= f.label :username, "Username" %>
			  <div class="ui input">
		            <%= f.text_field :username, placeholder: "Username" %>
		      </div>
			</div>
			<div class="field">
			  <%= f.label :password, "Password" %>
	          <div class="ui input">
	            <%= f.text_field :password, placeholder: "Password" %>
	          </div>
			</div>
			<div class="field">
			  <%= f.label :password_confirmation, "Password confirmation" %>
	          <div class="ui input">
	            <%= f.text_field :password_confirmation, placeholder: "Password confirmation" %>
	          </div>
			</div>
		  	 <%= f.submit "Sign up", class: "ui orange submit button" %>
		<% end %>
	</div>
</div>
<%= link_to '[ Cancel and return to home page ]', login_path, class: "text-info" %>